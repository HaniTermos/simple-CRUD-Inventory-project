<%- include('../partials/header') %>
<main class="container">
    <div class="page-head">
        <h1>Create New Item</h1>
        <div class="toolbar">
            <a class="btn" href="/items">Items</a>
        </div>
    </div>
    <form class="card" action="/items" method="POST">
        <label for="name">Item: </label>
        <input type="text" name="name" id="item" required>
        <label for="category_id">Category: </label>
        <select name="category_id" id="category">
            <% if (typeof categories !== 'undefined' && categories) { %>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= (category.id == (typeof query !== 'undefined' ? query.category_id : undefined)) ? 'selected' : '' %>><%= category.name %></option>
                <% }) %>
            <% } %>
        </select>
        <label for="description">Description: </label>
        <input type="text" name="description" id="description" required>
        <label for="price">Price: </label>
        <input type="number" step="0.01" name="price" id="price" required>
        <label for="quantity">Quantity: </label>
        <input type="number" name="quantity" id="quantity" required>
        <div class="actions">
            <button class="btn primary" type="submit">Create Item</button>
        </div>
    </form>
</main>
<%- include('../partials/footer') %>